<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.feiyang.watch.GiftActivity">

    <Button
        android:id="@+id/gift_left_btn"
        android:layout_width="30dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:text="@string/btn_gift_left" />

    <Button
        android:id="@+id/gift_right_btn"
        android:layout_width="30dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:text="@string/btn_gift_right" />

    <TextView
        android:id="@+id/gift_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/gift_left_btn"
        android:layout_toStartOf="@id/gift_right_btn"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="123"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/gift_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gift_score_text"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/gift_left_btn"
        android:layout_toStartOf="@id/gift_right_btn"
        android:gravity="center"
        android:text="hahah"
        android:textSize="10sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:text="@string/btn_exchange"/>

</RelativeLayout>
