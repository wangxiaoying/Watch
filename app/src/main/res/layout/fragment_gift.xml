<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.feiyang.watch.GiftFragment">

    <ImageView
        android:id="@+id/gift_score_img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:src="@drawable/coin"/>

    <TextView
        android:id="@+id/gift_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/colorScore"
        android:textSize="25sp"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/gift_name_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/gift_name"/>

    <TextView
        android:id="@+id/gift_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/gift_name_img"
        android:layout_alignEnd="@id/gift_name_img"
        android:layout_alignTop="@id/gift_name_img"
        android:layout_alignBottom="@id/gift_name_img"
        android:gravity="center"
        android:textColor="@color/colorGiftName"/>
</RelativeLayout>
